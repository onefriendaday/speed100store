{% if blok == blank %}
  {% set story from story id:'home' %}
  {% assign id = params.id | floor %}
  {% assign blok = story.content.body[0].body[id] %}
{% endif %}

<div class="teaser__img uk-width-1-2@s uk-width-2-3@m">
  <a class="u__block u__ratio" href="{{ blok.cta_link | url }}" style="padding-bottom: {{ blok.image | original_ratio }}%">
    <img
      src="{{ blok.image | resize:'10x0' }}"
      data-sizes="auto"
      data-src="{{ blok.image | resize:'800x0' }}"
      data-srcset="{{ blok.image | resize:'300x0' }} 300w, {{ blok.image | resize:'600x0' }} 600w"
      class="product-list__img lazyload"
      alt="" />
  </a>
</div>
<div class="teaser__text uk-width-1-2@s uk-width-1-3@m">
  <h1>
    <a href="{{ blok.cta_link | url }}">{{ blok.headline }}</a>
  </h1>
  <p>{{ blok.sub_headline }}</p>
  {% if blok.cta_link != blank %}
    <a class="teaser__link" href="{{ blok.cta_link | url }}">{{ blok.cta_label }}</a>
  {% endif %}
</div>
